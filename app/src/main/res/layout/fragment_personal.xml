<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalFragment">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5월 첫째 주 식단 분석"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <LinearLayout
        android:id="@+id/linearLayoutStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="총 칼로리" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15000 kcal"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

        <!-- Repeat similar block for 탄수화물, 단백질, 지방 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="총 탄수화물" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200g"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="총 단백질" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120g"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="총 지방" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50g"
                android:textColor="@android:color/holo_red_dark" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_view_solution"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="솔루션 보기"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutStats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textViewSolutionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5월 첫째 주 식단 솔루션"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_view_solution"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textViewSolutionDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남성의 경우 2,500 kcal 부족할 수 있습니다. 하루에 약 357 kcal를 추가로 섭취하세요."
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewSolutionTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textViewFoodSuggestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가할 수 있는 음식: 견과류 한 줌 (200 kcal), 바나나 1개 (105 kcal), 그릭 요거트 (150 kcal)"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewSolutionDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
